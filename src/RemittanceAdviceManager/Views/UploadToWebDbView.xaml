<UserControl x:Class="RemittanceAdviceManager.Views.UploadToWebDbView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RemittanceAdviceManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Login Panel -->
        <GroupBox Grid.Row="0" Header="WebDB Authentication" Margin="5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding Credentials.Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,20,0" IsEnabled="{Binding IsAuthenticated, Converter={StaticResource InverseBooleanConverter}}"/>

                <TextBlock Grid.Column="2" Text="Password:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <PasswordBox Grid.Column="3" x:Name="PasswordBox" Margin="0,0,20,0"
                             IsEnabled="{Binding IsAuthenticated, Converter={StaticResource InverseBooleanConverter}}"/>

                <CheckBox Grid.Column="4" Content="Remember Me"
                          IsChecked="{Binding Credentials.RememberMe}"
                          VerticalAlignment="Center" Margin="0,0,20,0"
                          IsEnabled="{Binding IsAuthenticated, Converter={StaticResource InverseBooleanConverter}}"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Login" Command="{Binding AuthenticateCommand}" Padding="15,5" Margin="0,0,10,0"
                            Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <Button Content="Logout" Command="{Binding LogoutCommand}" Padding="15,5"
                            Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Files to Upload -->
        <GroupBox Grid.Row="1" Header="Files to Upload" Margin="5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <ToolBarTray Grid.Row="0">
                    <ToolBar>
                        <Button Content="Refresh Files" Command="{Binding LoadFilesToUploadCommand}" Padding="10,5"/>
                        <Separator/>
                        <Button Content="Select All" Command="{Binding SelectAllCommand}" Padding="10,5"/>
                        <Button Content="Deselect All" Command="{Binding DeselectAllCommand}" Padding="10,5"/>
                        <Separator/>
                        <CheckBox Content="Overwrite Existing" IsChecked="{Binding OverwriteExisting}" VerticalAlignment="Center" Margin="10,0"/>
                    </ToolBar>
                </ToolBarTray>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilesToUpload}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Downloaded" Binding="{Binding DownloadedDate, StringFormat=\{0:g\}}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Uploaded" Binding="{Binding UploadedDate, StringFormat=\{0:g\}}" Width="150" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Upload Results -->
        <GroupBox Grid.Row="2" Header="Upload Results" Margin="5" Padding="5" MaxHeight="150">
            <DataGrid ItemsSource="{Binding UploadResults}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                    <DataGridTextColumn Header="Result" Binding="{Binding Success}" Width="100"/>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="400"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Control Panel -->
        <Border Grid.Row="3" Background="LightGray" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Upload Selected Files"
                        Command="{Binding UploadSelectedFilesCommand}"
                        Padding="20,8" Margin="0,0,10,0"
                        IsEnabled="{Binding IsUploading, Converter={StaticResource InverseBooleanConverter}}"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding UploadStatus}" Margin="0,0,0,5"/>
                    <ProgressBar Height="20" Value="{Binding UploadProgress}" Maximum="100"
                                 Visibility="{Binding IsUploading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
</UserControl>
