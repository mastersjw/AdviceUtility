<UserControl x:Class="RemittanceAdviceManager.Views.DownloadReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RemittanceAdviceManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Login Section (visible when not authenticated) -->
        <GroupBox Grid.Row="0" Header="Login" Margin="5" Padding="15"
                  Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding Credentials.Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" Text="Password:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <PasswordBox x:Name="PasswordBox" Grid.Column="3" Margin="0,0,20,0"/>

                <Button Grid.Column="4" Content="Login" Command="{Binding LoginCommand}" Padding="15,5" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <!-- Report Parameters (visible when authenticated) -->
        <GroupBox Grid.Row="1" Header="Provider Check Totals Report" Margin="5" Padding="15"
                  Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date and Folder Selection -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Advice Date -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Advice Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableDates}" SelectedItem="{Binding SelectedAdviceDate}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StringFormat=\{0:M/d/yyyy\}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Download Reports" Command="{Binding DownloadReportCommand}" Padding="15,5"/>
                        </StackPanel>
                    </Grid>

                    <!-- Download Folder -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Download Folder:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" Text="{Binding DownloadFolder}" IsReadOnly="True" Margin="0,0,10,0"/>
                        <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseFolderCommand}" Padding="10,5"/>
                    </Grid>
                </Grid>

                <!-- Provider Numbers -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                        <TextBlock Text="Provider Numbers:" VerticalAlignment="Top" Margin="0,5,10,0"/>
                        <StackPanel Orientation="Vertical">
                            <Button Content="Check All" Command="{Binding CheckAllProvidersCommand}" Padding="10,3" Margin="0,0,0,5" Width="100"/>
                            <Button Content="Uncheck All" Command="{Binding UncheckAllProvidersCommand}" Padding="10,3" Width="100"/>
                        </StackPanel>
                    </StackPanel>

                    <ScrollViewer Grid.Column="1" MaxHeight="120" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ProviderNumbers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Number}" IsChecked="{Binding IsSelected}" Margin="0,2,15,2" Width="80"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Downloaded Reports List -->
        <GroupBox Grid.Row="2" Header="Downloaded Reports" Margin="5" Padding="5"
                  Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <Button Content="Refresh" Command="{Binding LoadExistingReportsCommand}" Padding="10,5" Margin="0,0,10,0"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,10,0"/>
                    <Button Content="Check All" Command="{Binding CheckAllReportsCommand}" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Uncheck All" Command="{Binding UncheckAllReportsCommand}" Padding="10,5" Margin="0,0,10,0"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,10,0"/>
                    <Button Content="Print Selected" Command="{Binding PrintSelectedReportsCommand}" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Move Selected to Folder..." Command="{Binding MoveSelectedReportsCommand}" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Delete Selected" Command="{Binding DeleteSelectedReportsCommand}" Padding="10,5"/>
                </StackPanel>

                <!-- Reports DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding DownloadedReports}" AutoGenerateColumns="False"
                          IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Select" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Provider" Binding="{Binding ProviderNumber}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Advice Date" Binding="{Binding AdviceDate, StringFormat=\{0:M/d/yyyy\}}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Size (bytes)" Binding="{Binding FileSize}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Downloaded" Binding="{Binding DownloadedAt, StringFormat=\{0:g\}}" Width="150" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="LightGray" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" Width="200" Height="20" IsIndeterminate="True"
                             Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
