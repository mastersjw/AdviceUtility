<UserControl x:Class="RemittanceAdviceManager.Views.DownloadReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RemittanceAdviceManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Parameter Selection -->
        <GroupBox Grid.Row="0" Header="Provider Check Totals Report" Margin="5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Advice Date -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Advice Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding AvailableDates}"
                          SelectedItem="{Binding SelectedAdviceDate}"
                          DisplayMemberPath=""
                          Margin="0,0,20,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StringFormat=\{0:d\}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Vendor Number -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Vendor Number:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="3"
                          ItemsSource="{Binding VendorNumbers}"
                          SelectedItem="{Binding SelectedVendorNum}"
                          Margin="0,0,20,0"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Load Parameters" Command="{Binding LoadParametersCommand}" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Download Report" Command="{Binding DownloadReportCommand}" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Print Report" Command="{Binding PrintReportCommand}" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Save Report" Command="{Binding SaveReportCommand}" Padding="15,5"/>
                </StackPanel>

                <!-- Explanation -->
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="This report shows a breakdown of remittance check money by office and date for the selected advice date and vendor number."
                           TextWrapping="Wrap" Foreground="Gray" FontStyle="Italic"/>
            </Grid>
        </GroupBox>

        <!-- Report Preview -->
        <GroupBox Grid.Row="1" Header="Report Preview" Margin="5" Padding="5">
            <Border BorderBrush="Gray" BorderThickness="1">
                <Grid>
                    <TextBlock Text="Report will be displayed here after download.\n\nClick 'Download Report' to fetch the Provider Check Totals report from WebDB.\n\nNote: You must be authenticated as an Administrator to access this report."
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="Gray"
                               Visibility="{Binding ReportPreviewPath, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <!-- Placeholder for PDF viewer - in a real app, you would use a PDF viewer control -->
                    <TextBlock Text="{Binding ReportPreviewPath, StringFormat='Report downloaded: \{0\}\n\nUse Print Report button to print or Save Report to save to disk.'}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="20"
                               Visibility="{Binding ReportPreviewPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </GroupBox>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="LightGray" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1"
                             Width="200"
                             Height="20"
                             IsIndeterminate="True"
                             Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
    </UserControl.Resources>
</UserControl>
